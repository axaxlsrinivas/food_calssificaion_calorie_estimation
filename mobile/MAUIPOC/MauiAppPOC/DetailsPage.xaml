<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppPOC.DetailsPage"
             Title="Details">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Details Page"
                FontSize="32"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Label
                Text="This demonstrates Shell-based navigation"
                FontSize="18"
                HorizontalOptions="Center"
                Margin="0,0,0,20" />

            <!-- Display passed parameters -->
            <Frame
                BorderColor="{StaticResource Primary}"
                CornerRadius="10"
                Padding="20">
                <VerticalStackLayout Spacing="10">
                    <Label
                        Text="Received Data:"
                        FontSize="20"
                        FontAttributes="Bold" />
                    
                    <Label
                        x:Name="NameLabel"
                        FontSize="16" />
                    
                    <Label
                        x:Name="CountLabel"
                        FontSize="16" />
                </VerticalStackLayout>
            </Frame>

            <!-- Device Features Demo -->
            <Label
                Text="Device Features"
                FontSize="24"
                FontAttributes="Bold"
                Margin="0,20,0,10"
                HorizontalOptions="Center" />

            <Button
                Text="Check Battery Status"
                Clicked="OnCheckBatteryClicked"
                HorizontalOptions="Center" />

            <Label
                x:Name="BatteryLabel"
                FontSize="16"
                HorizontalOptions="Center"
                Margin="0,10,0,0" />

            <Button
                Text="Check Network Connectivity"
                Clicked="OnCheckNetworkClicked"
                HorizontalOptions="Center"
                Margin="0,10,0,0" />

            <Label
                x:Name="NetworkLabel"
                FontSize="16"
                HorizontalOptions="Center"
                Margin="0,10,0,0" />

            <!-- Navigation back -->
            <Button
                Text="Go Back"
                Clicked="OnGoBackClicked"
                HorizontalOptions="Center"
                Margin="0,30,0,0"
                BackgroundColor="{StaticResource Secondary}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
